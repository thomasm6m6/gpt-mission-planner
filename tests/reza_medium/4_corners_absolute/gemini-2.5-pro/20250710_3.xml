<TaskTemplate xmlns="https://robotics.ucmerced.edu/task"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="https://robotics.ucmerced.edu/task schemas/schemas/clearpath_husky.xsd">
    <CompositeTaskInformation>
        <TaskID>ClockwisePictureMissionOfExtremeTrees</TaskID>
        <TaskDescription>Going clockwise from the north most tree, take a picture of 4 trees. Meaning, go north most, east most, south most, west most. Make sure the pictures are as far a part as possible, locationwise.</TaskDescription>
    </CompositeTaskInformation>
    <AtomicTasks>
        <!-- Northmost Tree Tasks -->
        <AtomicTask>
            <TaskID>MoveToNorthmostTree</TaskID>
            <TaskDescription>Navigate to the northernmost pistachio tree in the orchard.</TaskDescription>
            <Action>
                <ActionType>moveToGPSLocation</ActionType>
                <moveToGPSLocation>
                    <latitude>37.2664871</latitude>
                    <longitude>-120.4202397</longitude>
                </moveToGPSLocation>
            </Action>
        </AtomicTask>
        <AtomicTask>
            <TaskID>TakePicAtNorthmostTree</TaskID>
            <TaskDescription>Take one thermal picture of the northernmost pistachio tree.</TaskDescription>
            <Action>
                <ActionType>takeThermalPicture</ActionType>
                <takeThermalPicture>
                    <numberOfPictures>1</numberOfPictures>
                </takeThermalPicture>
            </Action>
        </AtomicTask>
        <!-- Eastmost Tree Tasks -->
        <AtomicTask>
            <TaskID>MoveToEastmostTree</TaskID>
            <TaskDescription>Navigate to the easternmost pistachio tree in the orchard.</TaskDescription>
            <Action>
                <ActionType>moveToGPSLocation</ActionType>
                <moveToGPSLocation>
                    <latitude>37.2657878</latitude>
                    <longitude>-120.4201516</longitude>
                </moveToGPSLocation>
            </Action>
        </AtomicTask>
        <AtomicTask>
            <TaskID>TakePicAtEastmostTree</TaskID>
            <TaskDescription>Take one thermal picture of the easternmost pistachio tree.</TaskDescription>
            <Action>
                <ActionType>takeThermalPicture</ActionType>
                <takeThermalPicture>
                    <numberOfPictures>1</numberOfPictures>
                </takeThermalPicture>
            </Action>
        </AtomicTask>
        <!-- Southmost Tree Tasks -->
        <AtomicTask>
            <TaskID>MoveToSouthmostTree</TaskID>
            <TaskDescription>Navigate to the southernmost pistachio tree in the orchard.</TaskDescription>
            <Action>
                <ActionType>moveToGPSLocation</ActionType>
                <moveToGPSLocation>
                    <latitude>37.2657668</latitude>
                    <longitude>-120.4201975</longitude>
                </moveToGPSLocation>
            </Action>
        </AtomicTask>
        <AtomicTask>
            <TaskID>TakePicAtSouthmostTree</TaskID>
            <TaskDescription>Take one thermal picture of the southernmost pistachio tree.</TaskDescription>
            <Action>
                <ActionType>takeThermalPicture</ActionType>
                <takeThermalPicture>
                    <numberOfPictures>1</numberOfPictures>
                </takeThermalPicture>
            </Action>
        </AtomicTask>
        <!-- Westmost Tree Tasks -->
        <AtomicTask>
            <TaskID>MoveToWestmostTree</TaskID>
            <TaskDescription>Navigate to the westernmost pistachio tree in the orchard.</TaskDescription>
            <Action>
                <ActionType>moveToGPSLocation</ActionType>
                <moveToGPSLocation>
                    <latitude>37.2662488</latitude>
                    <longitude>-120.4203623</longitude>
                </moveToGPSLocation>
            </Action>
        </AtomicTask>
        <AtomicTask>
            <TaskID>TakePicAtWestmostTree</TaskID>
            <TaskDescription>Take one thermal picture of the westernmost pistachio tree.</TaskDescription>
            <Action>
                <ActionType>takeThermalPicture</ActionType>
                <takeThermalPicture>
                    <numberOfPictures>1</numberOfPictures>
                </takeThermalPicture>
            </Action>
        </AtomicTask>
    </AtomicTasks>
    <ActionSequence>
        <Sequence>
            <TaskID>MoveToNorthmostTree</TaskID>
            <TaskID>TakePicAtNorthmostTree</TaskID>
            <TaskID>MoveToEastmostTree</TaskID>
            <TaskID>TakePicAtEastmostTree</TaskID>
            <TaskID>MoveToSouthmostTree</TaskID>
            <TaskID>TakePicAtSouthmostTree</TaskID>
            <TaskID>MoveToWestmostTree</TaskID>
            <TaskID>TakePicAtWestmostTree</TaskID>
        </Sequence>
    </ActionSequence>
</TaskTemplate>
