<TaskTemplate xmlns="https://robotics.ucmerced.edu/task"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="https://robotics.ucmerced.edu/task schemas/schemas/clearpath_husky.xsd">
    <CompositeTaskInformation>
        <TaskID>CardinalPointPictureMission</TaskID>
        <TaskDescription>Going clockwise from the north most tree, take a picture of 4 trees. Meaning, go north most, east most, south most, west most. Make sure the pictures are as far a part as possible, locationwise.</TaskDescription>
    </CompositeTaskInformation>
    <AtomicTasks>
        <AtomicTask>
            <TaskID>MoveToNorthTree</TaskID>
            <TaskDescription>Move to the northernmost pistachio tree.</TaskDescription>
            <Action>
                <ActionType>moveToGPSLocation</ActionType>
                <moveToGPSLocation>
                    <latitude>37.2664871</latitude>
                    <longitude>-120.4202397</longitude>
                </moveToGPSLocation>
            </Action>
        </AtomicTask>
        <AtomicTask>
            <TaskID>TakePictureAtNorthTree</TaskID>
            <TaskDescription>Take one thermal picture at the northernmost pistachio tree.</TaskDescription>
            <Action>
                <ActionType>takeThermalPicture</ActionType>
                <takeThermalPicture>
                    <numberOfPictures>1</numberOfPictures>
                </takeThermalPicture>
            </Action>
        </AtomicTask>
        <AtomicTask>
            <TaskID>MoveToEastTree</TaskID>
            <TaskDescription>Move to the easternmost pistachio tree.</TaskDescription>
            <Action>
                <ActionType>moveToGPSLocation</ActionType>
                <moveToGPSLocation>
                    <latitude>37.2657878</latitude>
                    <longitude>-120.4201516</longitude>
                </moveToGPSLocation>
            </Action>
        </AtomicTask>
        <AtomicTask>
            <TaskID>TakePictureAtEastTree</TaskID>
            <TaskDescription>Take one thermal picture at the easternmost pistachio tree.</TaskDescription>
            <Action>
                <ActionType>takeThermalPicture</ActionType>
                <takeThermalPicture>
                    <numberOfPictures>1</numberOfPictures>
                </takeThermalPicture>
            </Action>
        </AtomicTask>
        <AtomicTask>
            <TaskID>MoveToSouthTree</TaskID>
            <TaskDescription>Move to the southernmost pistachio tree.</TaskDescription>
            <Action>
                <ActionType>moveToGPSLocation</ActionType>
                <moveToGPSLocation>
                    <latitude>37.2657668</latitude>
                    <longitude>-120.4201975</longitude>
                </moveToGPSLocation>
            </Action>
        </AtomicTask>
        <AtomicTask>
            <TaskID>TakePictureAtSouthTree</TaskID>
            <TaskDescription>Take one thermal picture at the southernmost pistachio tree.</TaskDescription>
            <Action>
                <ActionType>takeThermalPicture</ActionType>
                <takeThermalPicture>
                    <numberOfPictures>1</numberOfPictures>
                </takeThermalPicture>
            </Action>
        </AtomicTask>
        <AtomicTask>
            <TaskID>MoveToWestTree</TaskID>
            <TaskDescription>Move to the westernmost pistachio tree.</TaskDescription>
            <Action>
                <ActionType>moveToGPSLocation</ActionType>
                <moveToGPSLocation>
                    <latitude>37.2662488</latitude>
                    <longitude>-120.4203623</longitude>
                </moveToGPSLocation>
            </Action>
        </AtomicTask>
        <AtomicTask>
            <TaskID>TakePictureAtWestTree</TaskID>
            <TaskDescription>Take one thermal picture at the westernmost pistachio tree.</TaskDescription>
            <Action>
                <ActionType>takeThermalPicture</ActionType>
                <takeThermalPicture>
                    <numberOfPictures>1</numberOfPictures>
                </takeThermalPicture>
            </Action>
        </AtomicTask>
    </AtomicTasks>
    <ActionSequence>
        <Sequence>
            <TaskID>MoveToNorthTree</TaskID>
            <TaskID>TakePictureAtNorthTree</TaskID>
            <TaskID>MoveToEastTree</TaskID>
            <TaskID>TakePictureAtEastTree</TaskID>
            <TaskID>MoveToSouthTree</TaskID>
            <TaskID>TakePictureAtSouthTree</TaskID>
            <TaskID>MoveToWestTree</TaskID>
            <TaskID>TakePictureAtWestTree</TaskID>
        </Sequence>
    </ActionSequence>
</TaskTemplate>
