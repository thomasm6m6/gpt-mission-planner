<TaskTemplate xmlns="https://robotics.ucmerced.edu/task"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="https://robotics.ucmerced.edu/task schemas/schemas/clearpath_husky.xsd">
    <CompositeTaskInformation>
        <TaskID>ClockwiseCardinalTreePictureMission</TaskID>
        <TaskDescription>Going clockwise from the north most tree, take a picture of 4 trees. Meaning, go north most, east most, south most, west most. Make sure the pictures are as far a part as possible, locationwise.</TaskDescription>
    </CompositeTaskInformation>
    <AtomicTasks>
        <!-- Task to move to the northernmost tree -->
        <AtomicTask>
            <TaskID>MoveToNorthernmostTree</TaskID>
            <TaskDescription>Navigate to the northernmost pistachio tree in the orchard.</TaskDescription>
            <Action>
                <ActionType>moveToGPSLocation</ActionType>
                <moveToGPSLocation>
                    <latitude>37.2664871</latitude>
                    <longitude>-120.4202397</longitude>
                </moveToGPSLocation>
            </Action>
        </AtomicTask>
        <!-- Task to take a picture at the northernmost tree -->
        <AtomicTask>
            <TaskID>TakePictureAtNorthernmostTree</TaskID>
            <TaskDescription>Take one thermal picture at the northernmost pistachio tree.</TaskDescription>
            <Action>
                <ActionType>takeThermalPicture</ActionType>
                <takeThermalPicture>
                    <numberOfPictures>1</numberOfPictures>
                </takeThermalPicture>
            </Action>
        </AtomicTask>
        <!-- Task to move to the easternmost tree -->
        <AtomicTask>
            <TaskID>MoveToEasternmostTree</TaskID>
            <TaskDescription>Navigate to the easternmost pistachio tree in the orchard.</TaskDescription>
            <Action>
                <ActionType>moveToGPSLocation</ActionType>
                <moveToGPSLocation>
                    <latitude>37.2657878</latitude>
                    <longitude>-120.4201516</longitude>
                </moveToGPSLocation>
            </Action>
        </AtomicTask>
        <!-- Task to take a picture at the easternmost tree -->
        <AtomicTask>
            <TaskID>TakePictureAtEasternmostTree</TaskID>
            <TaskDescription>Take one thermal picture at the easternmost pistachio tree.</TaskDescription>
            <Action>
                <ActionType>takeThermalPicture</ActionType>
                <takeThermalPicture>
                    <numberOfPictures>1</numberOfPictures>
                </takeThermalPicture>
            </Action>
        </AtomicTask>
        <!-- Task to move to the southernmost tree -->
        <AtomicTask>
            <TaskID>MoveToSouthernmostTree</TaskID>
            <TaskDescription>Navigate to the southernmost pistachio tree in the orchard.</TaskDescription>
            <Action>
                <ActionType>moveToGPSLocation</ActionType>
                <moveToGPSLocation>
                    <latitude>37.2657668</latitude>
                    <longitude>-120.4201975</longitude>
                </moveToGPSLocation>
            </Action>
        </AtomicTask>
        <!-- Task to take a picture at the southernmost tree -->
        <AtomicTask>
            <TaskID>TakePictureAtSouthernmostTree</TaskID>
            <TaskDescription>Take one thermal picture at the southernmost pistachio tree.</TaskDescription>
            <Action>
                <ActionType>takeThermalPicture</ActionType>
                <takeThermalPicture>
                    <numberOfPictures>1</numberOfPictures>
                </takeThermalPicture>
            </Action>
        </AtomicTask>
        <!-- Task to move to the westernmost tree -->
        <AtomicTask>
            <TaskID>MoveToWesternmostTree</TaskID>
            <TaskDescription>Navigate to the westernmost pistachio tree in the orchard.</TaskDescription>
            <Action>
                <ActionType>moveToGPSLocation</ActionType>
                <moveToGPSLocation>
                    <latitude>37.2662488</latitude>
                    <longitude>-120.4203623</longitude>
                </moveToGPSLocation>
            </Action>
        </AtomicTask>
        <!-- Task to take a picture at the westernmost tree -->
        <AtomicTask>
            <TaskID>TakePictureAtWesternmostTree</TaskID>
            <TaskDescription>Take one thermal picture at the westernmost pistachio tree.</TaskDescription>
            <Action>
                <ActionType>takeThermalPicture</ActionType>
                <takeThermalPicture>
                    <numberOfPictures>1</numberOfPictures>
                </takeThermalPicture>
            </Action>
        </AtomicTask>
    </AtomicTasks>
    <ActionSequence>
        <Sequence>
            <TaskID>MoveToNorthernmostTree</TaskID>
            <TaskID>TakePictureAtNorthernmostTree</TaskID>
            <TaskID>MoveToEasternmostTree</TaskID>
            <TaskID>TakePictureAtEasternmostTree</TaskID>
            <TaskID>MoveToSouthernmostTree</TaskID>
            <TaskID>TakePictureAtSouthernmostTree</TaskID>
            <TaskID>MoveToWesternmostTree</TaskID>
            <TaskID>TakePictureAtWesternmostTree</TaskID>
        </Sequence>
    </ActionSequence>
</TaskTemplate>
