<TaskTemplate xmlns="https://robotics.ucmerced.edu/task"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="https://robotics.ucmerced.edu/task schemas/schemas/clearpath_husky.xsd">

    <CompositeTaskInformation>
        <TaskID>TakePictures_4_Trees_Clockwise</TaskID>
        <TaskDescription>Going clockwise from the north most tree, take a picture of 4 trees. Meaning, go north most, east most, south most, west most. Make sure the pictures are as far a part as possible, locationwise.</TaskDescription>
    </CompositeTaskInformation>

    <AtomicTasks>
        <!-- Northmost Tree -->
        <AtomicTask>
            <TaskID>Move_To_Northmost_Tree</TaskID>
            <TaskDescription>Move to GPS location of the north-most pistachio tree</TaskDescription>
            <Action>
                <ActionType>moveToGPSLocation</ActionType>
                <moveToGPSLocation>
                    <latitude>37.2664871</latitude>
                    <longitude>-120.4202397</longitude>
                </moveToGPSLocation>
            </Action>
        </AtomicTask>

        <AtomicTask>
            <TaskID>Take_Thermal_Picture_Northmost_Tree</TaskID>
            <TaskDescription>Take a thermal picture at the north-most pistachio tree</TaskDescription>
            <Action>
                <ActionType>takeThermalPicture</ActionType>
                <takeThermalPicture>
                    <numberOfPictures>1</numberOfPictures>
                </takeThermalPicture>
            </Action>
        </AtomicTask>

        <!-- Eastmost Tree -->
        <AtomicTask>
            <TaskID>Move_To_Eastmost_Tree</TaskID>
            <TaskDescription>Move to GPS location of the east-most pistachio tree</TaskDescription>
            <Action>
                <ActionType>moveToGPSLocation</ActionType>
                <moveToGPSLocation>
                    <latitude>37.2657878</latitude>
                    <longitude>-120.4201516</longitude>
                </moveToGPSLocation>
            </Action>
        </AtomicTask>

        <AtomicTask>
            <TaskID>Take_Thermal_Picture_Eastmost_Tree</TaskID>
            <TaskDescription>Take a thermal picture at the east-most pistachio tree</TaskDescription>
            <Action>
                <ActionType>takeThermalPicture</ActionType>
                <takeThermalPicture>
                    <numberOfPictures>1</numberOfPictures>
                </takeThermalPicture>
            </Action>
        </AtomicTask>

        <!-- Southmost Tree -->
        <AtomicTask>
            <TaskID>Move_To_Southmost_Tree</TaskID>
            <TaskDescription>Move to GPS location of the south-most pistachio tree</TaskDescription>
            <Action>
                <ActionType>moveToGPSLocation</ActionType>
                <moveToGPSLocation>
                    <latitude>37.2657668</latitude>
                    <longitude>-120.4201975</longitude>
                </moveToGPSLocation>
            </Action>
        </AtomicTask>

        <AtomicTask>
            <TaskID>Take_Thermal_Picture_Southmost_Tree</TaskID>
            <TaskDescription>Take a thermal picture at the south-most pistachio tree</TaskDescription>
            <Action>
                <ActionType>takeThermalPicture</ActionType>
                <takeThermalPicture>
                    <numberOfPictures>1</numberOfPictures>
                </takeThermalPicture>
            </Action>
        </AtomicTask>

        <!-- Westmost Tree -->
        <AtomicTask>
            <TaskID>Move_To_Westmost_Tree</TaskID>
            <TaskDescription>Move to GPS location of the west-most pistachio tree</TaskDescription>
            <Action>
                <ActionType>moveToGPSLocation</ActionType>
                <moveToGPSLocation>
                    <latitude>37.2662488</latitude>
                    <longitude>-120.4203623</longitude>
                </moveToGPSLocation>
            </Action>
        </AtomicTask>

        <AtomicTask>
            <TaskID>Take_Thermal_Picture_Westmost_Tree</TaskID>
            <TaskDescription>Take a thermal picture at the west-most pistachio tree</TaskDescription>
            <Action>
                <ActionType>takeThermalPicture</ActionType>
                <takeThermalPicture>
                    <numberOfPictures>1</numberOfPictures>
                </takeThermalPicture>
            </Action>
        </AtomicTask>
    </AtomicTasks>

    <ActionSequence>
        <Sequence>
            <TaskID>Move_To_Northmost_Tree</TaskID>
            <TaskID>Take_Thermal_Picture_Northmost_Tree</TaskID>
            <TaskID>Move_To_Eastmost_Tree</TaskID>
            <TaskID>Take_Thermal_Picture_Eastmost_Tree</TaskID>
            <TaskID>Move_To_Southmost_Tree</TaskID>
            <TaskID>Take_Thermal_Picture_Southmost_Tree</TaskID>
            <TaskID>Move_To_Westmost_Tree</TaskID>
            <TaskID>Take_Thermal_Picture_Westmost_Tree</TaskID>
        </Sequence>
    </ActionSequence>

</TaskTemplate>
